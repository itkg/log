<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="itkg_log.formatter.simple.class">Itkg\Log\Formatter\Simple</parameter>
        <parameter key="itkg_log.formatter.string.class">Itkg\Log\Formatter\String</parameter>
        <parameter key="itkg_log.formatter.xml.class">Itkg\Log\Formatter\XML</parameter>
    </parameters>
    <services>
        <service id="itkg_log.formatter.simple" class="%itkg_log.formatter.simple.class%" public="true" />
        <service id="itkg_log.formatter.string" class="%itkg_log.formatter.string.class%" public="true" />
        <service id="itkg_log.formatter.xml"    class="%itkg_log.formatter.xml.class%" public="true" />

        <!-- Default Formatter -->
        <service id="itkg_log.formatter.default" alias="itkg_log.formatter.simple" />
    </services>
</container>